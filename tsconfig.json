{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
    ],
    "compilerOptions": {
      "baseUrl": "src",
      "paths": {
        "@/*": ["src/*"],
      }
    }
  }
}
